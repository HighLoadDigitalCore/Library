@model Partner
@{
    ViewBag.Title = "Редактирование наценки для поставщика";
    Layout = "~/Views/Shared/_Master.cshtml";
}
<h2>Редактирование наценки для @Model.Description</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.ID)
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Margin)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Margin)
            @Html.ValidationMessageFor(model => model.Margin)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Discount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Discount)
            @Html.ValidationMessageFor(model => model.Discount)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SalePriority)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SalePriority)
            @Html.ValidationMessageFor(model => model.SalePriority)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Enabled)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Enabled)
            @Html.ValidationMessageFor(model => model.Enabled)
        </div>
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}
<div class="backref">
    @Html.ActionLink("Назад к списку", "PartnerList")
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
