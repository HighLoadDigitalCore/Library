@model Order
@{
    ViewBag.Title = "Удаление заказа";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2>Удаление заказа</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <h3>Вы действительно хотите удалить заказ с номером @Model.OrderNumber и все связанные с ним данные из системы?</h3>
        <br />
        <input type="submit" value="Удалить" />
    </fieldset>
}

<div class="backref">
    @Html.ActionLinkQuery("Назад к списку", "Index", "Orders", new[] {"query", "page" })
</div>
